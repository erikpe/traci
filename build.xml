<project>

    <property name="jarfile" value="Traci.jar" />

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build" />
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="build/classes"/>
    </target>

    <target name="jar" depends="compile">
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/${jarfile}" basedir="build/classes">
            <manifest>
                <attribute name="Main-Class" value="traci.main.Main"/>
            </manifest>
        </jar>
    </target>

    <target name="run" depends="jar">
        <java jar="build/jar/${jarfile}" fork="true"/>
    </target>

</project>

