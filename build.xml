<project default="jar">

    <property name="jarfile" value="traci.jar" />

    <target name="clean">
        <delete dir="bin"/>
    </target>

    <target name="build">
        <mkdir dir="bin"/>
        <javac srcdir="src" destdir="bin"/>
    </target>

    <target name="jar" depends="build">
        <mkdir dir="bin"/>
        <jar destfile="bin/${jarfile}" basedir="bin">
            <manifest>
                <attribute name="Main-Class" value="traci.main.Main"/>
            </manifest>
        </jar>
    </target>

    <target name="run" depends="jar">
        <java jar="bin/${jarfile}" fork="true"/>
    </target>

</project>

